#!/bin/bash

suspend='󰤄  Suspend'
poweroff='  Poweroff'
reboot='  Reboot'

case $(echo -e "$suspend\n$poweroff\n$reboot" | fuzzel -p '  ' -l 3 -w 20 -d) in

    $suspend)
        systemctl suspend
        ;;

    $poweroff)
        systemctl poweroff
        ;;

    $reboot)
        systemctl reboot
        ;;
esac
