# Appearance and update intervall
general {
	colors = false
    interval = 5
}


# Order
order += "cpu_usage"
order += "memory"
order += "disk /"
order += "wireless _first_"
order += "volume master"
order += "battery all"
order += "tztime local"

# CPU
cpu_usage {
    format = "CPU %usage"
}

# RAM
memory {
    format = "RAM %used"
}

# Internal drive
disk "/" {
    format = "DISK %used"
}

# Wi-Fi
wireless _first_ {
    format_up = "WIFI %essid %quality"
    format_down = "WIFI DOWN"
}

# Volume
volume master {
    format = "VOLUME %volume"
    format_muted = "VOLUME muted"
    device = "default"
}

# Battery
battery all {
    format = "BATTERY %status %percentage"
    format_down = "BATTERY down"
	last_full_capacity = true
}

# Time
tztime local {
    format = "%Y-%m-%d %H:%M "
}
