# Appearance and update intervall
general {
	colors = false
    interval = 5
}


# Order
order += "cpu_usage"
order += "memory"
order += "disk /"
order += "wireless _first_"
order += "volume master"
order += "battery all"
order += "tztime local"

# CPU
cpu_usage {
    format = "  %usage"
}

# RAM
memory {
    format = "  %used"
}

# Internal drive
disk "/" {
    format = "󱛟 %used"
}

# Wi-Fi
wireless _first_ {
    format_up = "󰤨 %essid %quality"
    format_down = "󰤨 DOWN"
}

# Volume
volume master {
    format = "󰕾 %volume"
    format_muted = "󰕾 muted"
    device = "default"
}

# Battery
battery all {
    format = "󰁹 %percentage"
    format_down = "󰁹 down"
	last_full_capacity = true
}

# Time
tztime local {
    format = "  %Y-%m-%d %H:%M "
}
