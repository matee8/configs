[global]
	# Display.
	width = 300
	origin = bottom-right
	offset = 15x15

    # Show how many messages are hidden.
    indicate_hidden = yes

    # Shrink window if it's smaller than the width.
    shrink = no

    # The transparency of the window.
    transparency = 1

    # Draw a line between multiple notifications.
    separator_height = 6
    separator_color = "#89b4fa"

	# Set the notification padding.
	padding = 16
    horizontal_padding = 16

    # Disable frame (border).
	frame_width = 0

	# Set the font.
	font = Hack Nerd Font 11

	# Formatting.
	markup = full
    format = "<b>%a</b>\n%s"

	# Text alignment.
	alignment = left
	vertical_alignment = center

    # Wrap text if it doesn't fit in geometry
    word_wrap = yes

    # Indicators for URLs and actions.
    show_indicators = no

    # Align icons.
    icon_position = left

    # Scale small icons up to this size.
    min_icon_size = 50

    # Scale larger icons down to this size.
    max_icon_size = 60    

    # Icon theme.
	icon_theme = "Papirus-Dark"

	# Avoid timing out hidden notifications.
	sticky_history = yes

	# Maximum amount of notifications kept in history
	history_length = 100

[urgency_low]
	background = "#1E1E2E"
	foreground = "#CDD6F4"
	corner-radius = 7

[urgency_normal]
	background = "#1E1E2E"
	foreground = "#CDD6F4"
	corner-radius = 7

[urgency_critical]
	background = "#1E1E2E"
	foreground = "#CDD6F4"
	frame_color = "#FAB387"
	corner-radius = 7
