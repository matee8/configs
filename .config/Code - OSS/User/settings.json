{
    // open json editor for settings
    "workbench.settings.editor": "json",

    // Theme
    "workbench.colorTheme": "Tokyo Night",
    "workbench.iconTheme": "catppuccin-mocha",

    // Change font
    "editor.fontFamily": "Hack Nerd Font",
    "scm.inputFontFamily": "Hack Nerd Font",
    "terminal.integrated.fontFamily": "Hack Nerd Font",
    "chat.editor.fontFamily": "Hack Nerd Font",
    "debug.console.fontFamily": "Hack Nerd Font",
    "editor.codeLensFontFamily": "Hack Nerd Font",
    "notebook.output.fontFamily": "Hack Nerd Font",
    "markdown.preview.fontFamily": "Hack Nerd Font",
    "editor.inlayHints.fontFamily": "Hack Nerd Font",

    // Font size
	"editor.fontSize": 14,
    "terminal.integrated.fontSize": 14,

    // UI
    "editor.minimap.enabled": false,
    "window.commandCenter": false,
    "editor.scrollbar.vertical": "auto",
    "window.titleBarStyle": "custom",
    "editor.scrollbar.horizontal": "auto",
	"window.menuBarVisibility": "toggle",

    // Toggle excluded files
    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/CVS": true,
        "**/.DS_Store": true,
        "**/Thumbs.db": true,
        "**/node_modules": true,
        "**/.next": true,
        "**/.husky": true,
        "**/drizzle": true,
        "**/dist": true,
        "**/.todo.md": true,
        "**/.vscode": true,
        "**/.eslintrc.cjs": true,
        "**/.editorconfig": true,
        "**/.gitignore": true,
        "**/.lintstagedrc.mjs": true,
        "**/.markdownlint.json": true,
        "**/.markdownlintignore": true,
        "**/.prettierignore": true,
        "**/bun.lockb": true,
        "**/cspell.json": true,
        "**/package-lock.json": true,
        "**/pnpm-lock.yaml": true,
        "**/next-env.d.ts": true,
        "**/postcss.config.cjs": true,
        "**/prettier.config.js": true,
        "**/README.md": true,
        "**/next.config.js": true,
        "**/tailwind.config.ts": true,
        "**/drizzle.config.ts": true,
        "**/migrate.ts": true,
        "**/.env.example": true
    },

    
    //Misc
    "workbench.startupEditor": "none",
    "explorer.compactFolders": false,
    "editor.bracketPairColorization.enabled": true,
    "breadcrumbs.filePath": "off",
    "files.autoSave": "afterDelay",
    "files.autoSaveDelay": 0,
    "files.autoSaveWhenNoErrors": true,
    "git.enableSmartCommit": true,
    "git.confirmSync": false,
    "diffEditor.ignoreTrimWhitespace": false,
    "codeium.enableCodeLens": false,
    "fiveServer.php.executable": "/usr/bin/php",
    "php.validate.run": "onType",
    "oracledevtools.bookmarkFileFolder": "/home/mate/Oracle/oracle.oracledevtools",
    "oracledevtools.download.otherFolder": "/home/mate/downloads",
    "oracledevtools.connectionConfiguration.configFilesFolder": "/home/mate/Oracle/network/admin",
    "oracledevtools.connectionConfiguration.walletFileFolder": "/home/mate/Oracle/network/admin",
    "[oraclesql]": {
        "editor.suggest.showSnippets": true,
        "editor.quickSuggestions": {
            "comments": "on",
            "strings": "on",
            "other": "on"
        }
    },
    "workbench.activityBar.location": "hidden",

}
